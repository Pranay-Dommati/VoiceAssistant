# Environment Variables for Voice Assistant
# Copy this file to .env and add your actual API keys

# OpenWeatherMap API Key
# Get yours at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# NewsAPI Key  
# Get yours at: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Gemini API Key
# Get yours at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Default Settings
DEFAULT_CITY=NewYork
DEFAULT_COUNTRY=us
REMINDER_CHECK_INTERVAL=30
WAKE_WORD=assistant

# Speech Settings
SPEECH_RATE=180
SPEECH_VOLUME=0.9
MICROPHONE_TIMEOUT=5
PHRASE_TIME_LIMIT=10
